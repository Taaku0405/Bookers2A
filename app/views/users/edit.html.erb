<p id="notice"></p>
<div class="container">
<div class="row">
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
 <%= form_with model: @book do |f| %>
  <h6>Name</h6>
  <%= f.text_field :name %>
  <h6>image</h6>
  <%= f.file_field :image, accept: "image/*" %>
  <h6>Introduction</h6>
  <%= f.text_area :Introduction %>
  <div class="form-group">
  <%= f.submit 'Update User',class: "btn btn-secondary data-disable-with=Update User" %>

  <% end %>