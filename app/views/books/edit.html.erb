<p id="notice"></p>
 <div class="container">
 <div class="row">
 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

 <h1>Editing Book</h1>
  <%= form_with model: @user do |f| %>

  <div class="form-group">
  <h6>Title</h6>
  <%= f.text_field :title %>
  </div>

  <div class="form-group">
  <h6>Opinion</h6>
  <%= f.text_area :opinion %>
  </div>

  <div class="form-group">
  <%= f.submit'Update Book', class: "btn btn-success data-disable-with=Update Book" %>
 </div>
<% end %>

 <p>
    <%= link_to 'Show', book_path(@book) %>
    |
    <%= link_to 'Back', books_path %>
  </p>
